{
  "name": "thumblify-backend",
  "version": "1.0.0",
  "description": "Thumblify Pro backend API server",
  "main": "src/app.js",
  "scripts": {
    "dev": "nodemon src/app.js",
    "start": "node src/app.js",
    "test": "jest --watchAll=false",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:e2e": "jest --config jest.e2e.config.js --watchAll=false",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "type-check": "echo 'No TypeScript in this setup'",
    "pre-commit": "npm run lint && npm run test && npm run type-check",
    "db:migrate": "npx prisma migrate dev",
    "db:seed": "npx prisma db seed",
    "db:reset": "npx prisma migrate reset"
  },
  "keywords": [
    "thumbnail",
    "screenshot",
    "api",
    "nodejs",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.9.2",
    "express-rate-limit": "^6.8.1",
    "multer": "^1.4.5-lts.1",
    "@prisma/client": "^5.1.1",
    "prisma": "^5.1.1",
    "bull": "^4.11.3",
    "ioredis": "^5.3.2",
    "puppeteer": "^21.0.2",
    "sharp": "^0.32.4",
    "aws-sdk": "^2.1429.0",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-github2": "^0.1.12",
    "winston": "^3.10.0",
    "@sentry/node": "^7.60.1"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "@types/jest": "^29.5.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}