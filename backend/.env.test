# Test Environment Configuration
NODE_ENV=test
PORT=3002
API_BASE_URL=http://localhost:3002/api/v1

# Test Database (use in-memory or separate test DB)
DATABASE_URL="postgresql://user:password@localhost:5432/thumblify_test?schema=public"

# JWT Configuration
JWT_SECRET=test-jwt-secret-key
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration (use different DB for tests)
REDIS_URL=redis://localhost:6379/1
REDIS_HOST=localhost
REDIS_PORT=6379

# Disable external services in tests
SENTRY_DSN=
SLACK_WEBHOOK_URL=

# Security
BCRYPT_ROUNDS=4
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000